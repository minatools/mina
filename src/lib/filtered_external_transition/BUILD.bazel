load(
    "@obazl_rules_ocaml//ocaml:rules.bzl",
    "ocaml_module",
    "ocaml_ns_library",
    "ppx_executable",
)

#################
ocaml_ns_library(
    name = "filtered_external_transition",
    main = ":_Filtered_external_transition",
    submodules = [
        ":_Filtered_external_transition",
    ],
    visibility = [
        "//visibility:public",
    ],
)

#############
ocaml_module(
    name = "_Filtered_external_transition",
    ppx = ":ppx1.exe",
    struct = "filtered_external_transition.ml",
    # visibility = ["//visibility:public"],
    deps = [
        "@mina//src/lib/coda_state",
        "@mina//src/lib/coda_transition",
        "@mina//src/lib/mina_base",
    ],
    deps_opam = [
        "core_kernel",
    ]
)

