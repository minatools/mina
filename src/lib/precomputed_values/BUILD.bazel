genrule(
    name = "gensrcs",
    outs = ["precomputed_values.ml"],
    cmd = "\n".join([
        "$(location {tool})  precomputed_values.ml".format(tool = TOOL),
        "cp precomputed_values.ml \"$(RULEDIR)/\"",
