    src = "precomputed_values.ml",
    opts = [],
    ppx = "@//bzl/ppx/exe:ppx_version__ppx_jane__ppxlib.metaquot",
    ppx_args = [
        # do not sort (buildifier)
        "-inline-test-lib",
        "precomputed_values",
